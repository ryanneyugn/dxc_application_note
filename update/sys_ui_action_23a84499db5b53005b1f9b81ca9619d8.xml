        <script><![CDATA[function onClickApprove(){
	gsftSubmit(null, g_form.getFormElement(), 'approve_leader');
}

if(typeof window == 'undefined'){
	run();
}

function run(){
	try{
		if(current.level_of_approval == 'Leader'){
			current.state = 'Approved';
		} else if (current.level_of_approval == 'LeaderPM'){
			current.state = 'WaitingPMApprover';
		}
		
		current.update();
		gs.addInfoMessage('Request approve success.');
	} catch(err){
		gs.addErrorMessage('Uncaught error occured: ' + err);
	}
}]]></script>
