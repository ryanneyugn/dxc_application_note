        <script><![CDATA[function onClickSubmit(){
	if(g_form.getValue('state') == 'Draft' || g_form.getValue('state') == 'New'){
		if(g_form.getValue('level_of_approval') == 'Leader'){
			g_form.setValue('state', 'WaitingLeader');
		}else if(g_form.getValue('level_of_approval') == 'LeaderPM'){
			g_form.setValue('state', 'WaitingPMApprover');
		}
	}
	
	gsftSubmit(null, g_form.getFormElement(), 'submit');
}

if(typeof window == 'undefined'){
	run();
}

function run(){	
	if(current.state == 'Draft'){
		if(current.level_of_approval == 'Leader'){
			current.state = 'WaitingLeader';
		}else if(current.level_of_approval == 'LeaderPM'){
			current.state = 'WaitingPMApprover';
		}
	}		
	
	try{
		current.update();
		gs.addInfoMessage('Request submit successful!');
	} catch (err){
		gs.addErrorMessage('Uncaught error occured:' + err);
	}	
}]]></script>
